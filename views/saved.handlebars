<div id="saved">
    <nav class="navbar navbar-dark bg-dark">
        <span class="navbar-brand mb-0 h1 text-center" id="brand">
            <h1>WoW Scrape!</h1>---Just the WoW from <a href="https://icy-veins.com" class="icy"
                style="text-decoration: none" target="_blank">Ice-Veins</a>
        </span>
        <h1 class="socialMedia"><button class='btn-lg btn-info goHome'><a href="/"
                    style="text-decoration: none">Home</a></button> <a
                href="https://www.linkedin.com/in/devin-stewart-7697bb9b/" class="fa fa-linkedin"></a> | <a
                href="https://www.github.com/bigshmow" class="fa fa-github"></a></h1>
    </nav>
    <div class="container">
        <br>
        <div class="jumbotron">
            <h1>Here are your saved articles!</h1>
        </div>
        {{#each Article}}
        <div class="row no-gutters">
            <div class="col-3">
                <div class="card mb-4">
                    <img src={{this.img}} class="card-img-top">
                </div>
            </div>
            <div class="col-6">
                <div class="card mb-4">
                    <p class="card-text">{{this.title}}<br>{{this.text}}<a href={{this.link}} class="stretched-link"
                            target="_blank"></a></p>
                </div>
            </div>
            <div class="col-3">
                <div class="card mb-4">
                    <button class='btn-lg btn-info makeNote'>Make a Note</button> <button data-_id={{this._id}}
                        class='btn-lg btn-info unSave'>Unsave this!</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="notes">Notes (not visibile at launch) </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>